<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.softwareengineeringproject.Controller.AudioController" 
      styleClass="main-container"
      stylesheets="@style.css"> 
    <Label text="Play audio" styleClass="section-label"/>
    
    <HBox spacing="5" alignment="CENTER">
        <TextField fx:id="filePathField" promptText="Path of the file audio" HBox.hgrow="ALWAYS" editable="false" styleClass="text-field"/> 
        
        <Button text="Select file" onAction="#onSelectFile" styleClass="standard-button"/>
    </HBox>
        
</VBox>
